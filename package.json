{
  "name": "@next-model/core",
  "version": "1.0.0-alpha.1",
  "description": "Rails like models using TypeScript/ES6 and Decorators.",
  "author": "Tamino Martinius <dev@zaku.eu>",
  "main": "./dist/next_model.js",
  "module": "./dist/next_model.js",
  "jsnext:main": "./dist/next_model.js",
  "typings": "./dist/next_model.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tamino-martinius/node-next-model.git"
  },
  "engines": {
    "node": ">=6.10"
  },
  "scripts": {
    "coverage": "rm -rf coverage* && jest --coverage && node remap_coverage.js && rm -rf coverage_jest_raw*",
    "test": "jest",
    "build": "rm -rf dist/* && tsc",
    "watch": "tsc -w",
    "ci": "npm run coverage && codecov"
  },
  "devDependencies": {
    "@types/faker": "^4.1.2",
    "@types/jest": "^22.1.3",
    "@types/node": "^9.4.6",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "codecov": "^3.0.0",
    "faker": "^4.1.0",
    "jest": "^22.4.0",
    "jest-set": "^2.0.0",
    "npm-watch": "^0.3.0",
    "remap-istanbul": "^0.10.1",
    "ts-jest": "^22.0.4",
    "typescript": "^2.7.2"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.(test|spec)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "coverageDirectory": "coverage_jest_raw"
  }
}
